package com.app;

/*
 * Nested inner class
 */
public class A {
	int a = 1;
	private int b =2;
	public static int c = 3;
	
	public void method() {
		System.out.println("Inside class A");
	}

	class B {

		public void method() {
			System.out.println("Inside inner class B");
		}

		class C {

			public void method() {
				System.out.println("Inside inner class C");
			}
		}
	}

	public static void main(String[] args) {
		A a = new A();
		a.method();
		A.B b = a.new B();
		b.method();
		A.B.C c = b.new C();
		c.method();

	}

}
